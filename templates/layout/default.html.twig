<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block meta %}{% endblock %}
    <link rel="icon" href="/docs/4.0/assets/img/favicons/favicon.ico">
    <title>{% block title %}{% endblock %} - App</title>
    <link rel="stylesheet" href="/build{{ Mix('/css/app.css') }}">
</head>

<body class="app">

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="{{ path('home') }}">Application</a>
    <button class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarsExampleDefault"
            aria-controls="navbarsExampleDefault"
            aria-expanded="false"
            aria-label="Toggle navigation"
    >
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('blog') }}"><i class="fa fa-book"></i> Blog</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('about') }}"><i class="fa fa-book"></i> About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('cabinet') }}"><i class="fa fa-user"></i> Cabinet</a>
            </li>
        </ul>
    </div>
</nav>

<main role="main" class="app-content">
    {% block breadcrumbs %}{% endblock %}
    {% block content %}{% endblock %}
</main>

<footer class="app-footer">
    <div class="container">
        <hr>
        <p>&copy; My App {{ 'now'|date('Y') }}</p>
    </div>
</footer>

<script src="/build{{ Mix('/js/app.js') }}"></script>
</body>
</html>
